<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventeasy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_eventeasy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_eventeasy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.home.CriarServico"></activity>
        <activity android:name=".ui.home.CriarEspaco" />
        <activity android:name=".ui.home.OpcaoAnuncio" />
        <activity
            android:name=".MenuInicialActivity"
            android:label="@string/title_activity_menu_inicial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadPrestador"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CadCliente"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TpCad"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>