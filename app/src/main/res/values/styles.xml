<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    <item name="autoCompleteTextViewStyle">@style/StyledSearch</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item> // Cor padr√£o da linha
        <item name="colorControlActivated">#F3AB35</item> // Cor linha e texto quando recebe foco
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColorHint">#FFFFFF</item> // Cor texto(hint) sem foco
    </style>

    //para a barra de pesquisa
    <style name="StyledSearch" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="colorControlNormal">#9E9E9E</item>
        <item name="android:textSize">16dp</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
